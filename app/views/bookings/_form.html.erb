  <div class="field">
    <%= f.label :ticket_amount %><br>
    <%= f.number_field :ticket_amount %>
  </div>
  
  <div class="field">
    <%= f.label :event_id %><br>
    <%= f.collection_select:event_id,Event.all, :id, :id_with_venue %>
  </div>
  
  
  
  
  <div class="actions">
    <%= f.submit 'Purchase', data: { confirm: 'Are you sure?'} %>
  </div>
<% end %>
