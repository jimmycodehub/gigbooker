<h1>Listing bookings</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Ticket type</th>
      <th>Ticket amount</th>
	  <th>Event id</th>
	  <th>Event Venue</th>
	  <th>Event artist</th>
	  <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.ticket_type %></td>
        <td><%= booking.ticket_amount %></td>
		<td><%= booking.event_id %></td>
		<td><%= booking.event.venue.name %></td>
		<td><%= booking.event.artist.name %></td>
		<td><%= booking.user.first_name %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

